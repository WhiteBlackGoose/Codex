// Configure bundling and minification for the project.
// More info at https://go.microsoft.com/fwlink/?LinkId=808241
[
  {
    "outputFileName": "wwwroot/css/site.min.css",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "wwwroot/css/site.css"
    ]
  },
  {
    "outputFileName": "wwwroot/bundles/modernizr.js",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "wwwroot/scripts/modernizr-*"
    ]
  },
  {
    "outputFileName": "wwwroot/bundles/jquery.js",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "wwwroot/scripts/jquery*.js",
      "!wwwroot/scripts/jquery*vsdoc.js",
      "!wwwroot/scripts/*.min.js"
    ],
    // Optionally specify minification options
    "minify": {
      "enabled": false
    }
  },
  {
    "outputFileName": "wwwroot/bundles/header.js",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "wwwroot/scripts/search.js",
      "wwwroot/scripts/split.js",
      "wwwroot/scripts/scripts.js"
    ]
  },
  {
    "outputFileName": "wwwroot/bundles/bootstrap.js",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "wwwroot/scripts/bootstrap.js",
      "wwwroot/scripts/respond.js"
    ]
  },
  {
    "outputFileName": "wwwroot/js/site.min.js",
    "inputFiles": [
      "wwwroot/js/site.js"
    ],
    // Optionally specify minification options
    "minify": {
      "enabled": true,
      "renameLocals": true
    },
    // Optionally generate .map file
    "sourceMap": false
  }
]
